<div class="container">
  <div class="row">
    <% task.errors.full_messages.each do |error| %>
      <div class="alert alert-block alert-danger">
      <%= error %>
      </div>
    <% end %>
  </div>
</div>
<%= form_for (task) do |f| %>
<div class="row">
<div class="form-group col-md-6">
  <%= f.label :description, class: 'form-label' %>
  <%= f.text_field :description, class: 'form-control', required: "required" %>
</div>
</div>
<div class="row">
  <div class="form-group col-md-6">
    <%= f.label :completion_date, class: 'form-label' %>
    <%= f.text_field :completion_date, class: 'datepicker form-control', "data-provide": 'datepicker' %>
  </div>
</div>
<div class="row">
  <div class="form-group col-md-1">
    <%= f.label :priority, class: 'form-label' %>
    <%= f.number_field :priority, class: 'form-control', min: 0, max: 10 %>
  </div>
  <div class="form-group col-md-4">
    <%= check_box_tag(:"task[sticky]", true) %>
    <%= label_tag(:"task[sticky]", "Sticky?", class: "sticky") %>
  </div>
</div>
<div class="row">
  <div class="form-group col-md-4">
    <%= f.submit :submit, class: 'btn btn-block btn-primary' %>
  </div>
</div>
<% end %>
